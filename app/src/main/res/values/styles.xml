<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Diyar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_color_orange</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="progress_bar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="progress_pagination" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/default_color_orange</item>
    </style>

    <style name="theme_edit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/default_color_text_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/default_color_purple</item>
        <item name="colorControlActivated">@color/default_color_orange</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomNavigationView">
        <item name="bottomSheetStyle">@android:color/transparent</item>
    </style>
    <!-- for text -->
    <style name="AppTabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="text_view_font">
        <item name="android:fontFamily">@font/golos_normal</item>
    </style>

    <style name="text_bottom_style">
        <item name="android:fontFamily">@font/golos_normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/default_margin_16</item>
    </style>

    <style name="clickable_constraint_layout" >
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="size_circle_cancel">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimaryDisableOnly">#A6A6A6</item>
        <item name="colorAccent">@color/final_white</item>
    </style>

</resources>
